{% block sw_cms_block_preview_tecsafe_ofcp %}
    {% if page.product.customFields.tecsafe_enabled %}
        {% set product = {'id': page.product.id, 'name': page.product.translated.name}|json_encode %}
        <script>
            window.TECSAFE_OFCP_META = {
              product: {{ product|raw }}
            }
        </script>
        <iframe src="{{ ofcp_app_widget_url() }}" width="100%" height="500px" style="margin-right: 20px; margin-left: 20px" id="tecsafe-ofcp-widget"></iframe>
    {% endif %}
{% endblock %}
